PKG_CXXFLAGS=-I. -Iinclude
PKG_LIBS=-Llib -larchive -lnettle

.PHONY: all libarchive clean

all: $(OBJECTS) $(SHLIB)

$(SHLIB): libarchive

libarchive-3.3.1/Makefile:
	(cd libarchive-3.3.1 && \
configure --enable-shared=no --enable-static=yes --prefix=$(PWD))

libarchive: libarchive-3.3.1/Makefile
	(cd libarchive-3.3.1 && \
make CC="$(CC)" AR="$(AR)" ARFLAGS=$(ARFLAGS) && \
make install)

clean:
	(cd libarchive-3.3.1 make clean)
	rm -f $(OBJECTS) $(SHLIB)
